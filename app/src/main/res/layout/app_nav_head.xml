<?xml version="1.0" encoding="utf-8"?>
<info.jiuyou.codediy.widget.RatioLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_nav_head_bg"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="20dp"
    app:ratio="16:9">

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击头像登录"
        android:textColor="@color/app_text_main" />
</info.jiuyou.codediy.widget.RatioLinearLayout>